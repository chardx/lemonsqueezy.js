    "release:dev": "npm run build && changeset publish --snapshot --no-git-tag --tag dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "type": "module",
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  }
}
